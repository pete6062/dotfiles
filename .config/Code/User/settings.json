{
    // git
    "git.terminalGitEditor": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    
    // cmake
    "cmake.configureOnOpen": true,

    // neovim
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",

    // vscode
    "telemetry.telemetryLevel": "off",

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    "editor.bracketPairColorization.enabled": false,
    "editor.rulers": [80],
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.inlayHints.enabled": "off",

    "workbench.colorCustomizations": {
        
        // cursor color.
        "editorCursor.foreground": "#fa8500",

        // ruler color.
        "editorRuler.foreground": "#444444",

        // selection highlighting.
        "editor.selectionBackground": "#fa850021",
        "editor.selectionHighlightBackground": "#fa850021",
        "editor.selectionHighlightBorder": "#ffa94760",

        // intellisense window colors
        "editorSuggestWidget.selectedBackground": "#fa850021",
        "editorSuggestWidget.highlightForeground": "#fa8500",
        
        // terminal colors.
        "terminal.foreground" : "#ffffff",
        "terminal.background" : "#000000"
    },

    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Monochrome Dark",
    "extensions.ignoreRecommendations": true,

    // language specific settings

    // disable autocomplete for .txt files
    "[plaintext]": {
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "window.density.editorTabHeight": "compact"
} 
